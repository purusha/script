X = 0
class C
  X = 1
  module M
    X = 2
    class D
      X = 3
      puts X          # => 3
      puts C::X       # => 1
      puts C::M::X    # => 2
      puts M::X       # => 2
      puts ::X        # => 0
    end
  end
end

------------------------------------------------------------------------------------------------------

# Output
" \n  The city is Butwal. \n  The temp is 40.55555555555556 C \n"

------------------------------------------------------------------------------------------------------
